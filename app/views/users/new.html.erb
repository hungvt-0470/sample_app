<% provide :title, t("pages.signup.title") %>

<h1><%= t "pages.signup.title" %></h1>
<div class="row">
  <div>
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.label :password_confirmation, t("pages.signup.form.confirmation") %>
      <%= f.password_field :password_confirmation %>
      <%= f.submit t("pages.signup.form.create_acc"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
