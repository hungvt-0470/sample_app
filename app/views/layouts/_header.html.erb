<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("title.header_title"), "#", id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t("navbar.home"), "#" %></li>
          <li><%= link_to t("navbar.help"), "#" %></li>
          <% if logged_in? %>
            <li><%= link_to t("navbar.users"), users_path %></li>
            <li class="dropdown">
              <%= link_to "#", id: "account",
                              class: "dropdown-toggle",
                              "data-toggle": "dropdown" do
              %>
                <%= t "navbar.account.main" %>
                <b class="caret"></b>
              <% end %>
              <ul id="dropdown-menu" class="dropdown-menu">
                <li><%= link_to t("navbar.account.profile"), current_user %></li>
                <li>
                  <%= link_to t("navbar.account.setting"),
                              edit_user_path(current_user) %>
                </li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("navbar.account.logout"),
                              logout_path, data: { turbo_method: :delete }
                  %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t("navbar.login"), login_path %></li>
          <% end %>
        </ul>
      </nav>
  </div>
</header>
